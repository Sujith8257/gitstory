NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# GitHub OAuth Configuration
# Create a GitHub OAuth App at https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/api/auth/callback (for local dev)
# or https://your-domain.com/api/auth/callback (for production)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitLab OAuth Configuration
# Create a GitLab OAuth Application at https://gitlab.com/-/user_settings/applications
# Scopes: read_user, read_api, read_repository
# Set Redirect URI to: http://localhost:3000/api/auth/callback (for local dev)
# or https://your-domain.com/api/auth/callback (for production)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=